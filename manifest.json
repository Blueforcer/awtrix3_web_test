      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View system status and matrix display",
      "url": "/?page=dashboard",
      "icons": [
        {
          "src": "icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Icons",
      "short_name": "Icons",
      "description": "Manage custom icons",
      "url": "/?page=icons",
      "icons": [
        {
          "src": "icons/shortcut-icons.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Configure AWTRIX3 settings",
      "url": "/?page=settings",
      "icons": [
        {
          "src": "icons/shortcut-settings.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Creator",
      "short_name": "Creator",
      "description": "Create custom pixel art",
      "url": "/?page=creator",
      "icons": [
        {
          "src": "icons/shortcut-creator.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "AWTRIX3 Dashboard - Desktop View"
    },
    {
      "src": "screenshots/mobile-dashboard.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "AWTRIX3 Dashboard - Mobile View"
    }
  ],
  
  "categories": [
    "utilities",
    "productivity",
    "lifestyle"
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+awtrix",
      "url": "/?handler=%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "file_handlers": [
    {
      "action": "/?handler=icon",
      "accept": {
        "image/png": [".png"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/gif": [".gif"],
        "image/bmp": [".bmp"]
      },
      "icons": [
        {
          "src": "icons/file-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ]
}